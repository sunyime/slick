<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="H1" parent="Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/h1_text_color</item>
    </style>

    <style name="H2" parent="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/h2_text_color</item>
    </style>

    <style name="ListH1" parent="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/h1_text_color</item>
    </style>
    <style name="ListH2" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/h2_text_color</item>
    </style>
</resources>
